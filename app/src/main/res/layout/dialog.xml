<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textClipBoardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="클립보드 제목"
        android:gravity="start|top"
        android:textColor="#000000"
        android:textSize="15dp"
        android:fontFamily="@font/robotomedium"
        android:letterSpacing="0.05"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/EditClipBoardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textClipBoardName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textClipBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="클립보드"
        android:gravity="start|top"
        android:textColor="#000000"
        android:textSize="15dp"
        android:fontFamily="@font/robotomedium"
        android:letterSpacing="0.05"
        android:layout_below="@id/EditClipBoardName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/EditClipBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textClipBoard"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="15dp"/>

    <LinearLayout
        android:id="@+id/linear30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/EditClipBoard"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnCancel"
            android:layout_marginTop="10dp"
            android:text="취소"
            android:textSize="20dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnAddClipBoard"
            android:layout_marginTop="10dp"
            android:text="추가하기"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>
