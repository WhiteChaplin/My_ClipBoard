<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        android:elevation="4dp"
        android:id="@+id/Toolbar">

        <TextView
            android:id="@+id/toolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text="회원가입"
            android:textColor="#000000"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanscjkkrregular"
            android:textSize="25dp"
            android:letterSpacing="0.02"
            />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-MAIL"
        android:gravity="start|top"
        android:textColor="#000000"
        android:textSize="13dp"
        android:fontFamily="@font/robotomedium"
        android:letterSpacing="0.05"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="120dp"/>

    <EditText
        android:id="@+id/EditEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="example@naver.com"
        android:textColorHint="#B6B6B6"
        android:layout_toRightOf="@id/text_id"
        android:layout_alignBaseline="@id/text_id"
        android:layout_marginLeft="81dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:gravity="start|top"
        android:textColor="#000000"
        android:textSize="13dp"
        android:fontFamily="@font/robotomedium"
        android:letterSpacing="0.05"
        android:layout_below="@id/text_id"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="47.3dp"/>

    <EditText
        android:id="@+id/EditTextPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="6자리 이상 입력해주세요"
        android:textColorHint="#B6B6B6"
        android:layout_toRightOf="@id/text_password"
        android:layout_alignBaseline="@id/text_password"
        android:layout_marginLeft="52dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:gravity="start|top"
        android:textColor="#000000"
        android:textSize="13dp"
        android:fontFamily="@font/robotomedium"
        android:letterSpacing="0.05"
        android:layout_below="@id/text_password"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="47.3dp"/>

    <EditText
        android:id="@+id/EditTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="이름을 입력해주세요"
        android:textColorHint="#B6B6B6"
        android:layout_toRightOf="@id/text_name"
        android:layout_alignBaseline="@id/text_name"
        android:layout_marginLeft="85dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/text_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE NUMBER"
        android:gravity="start|top"
        android:textColor="#000000"
        android:textSize="13dp"
        android:fontFamily="@font/robotomedium"
        android:letterSpacing="0.05"
        android:layout_below="@id/text_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="47.5dp"/>

    <EditText
        android:id="@+id/EditTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" - 빼고 입력해주세요"
        android:textColorHint="#B6B6B6"
        android:layout_toRightOf="@id/text_phonenumber"
        android:layout_alignBaseline="@id/text_phonenumber"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/btn_create"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Create"
        android:background="#FFEB3B"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/EditTextPhone"
        android:layout_marginTop="60dp"
        />

</RelativeLayout>
